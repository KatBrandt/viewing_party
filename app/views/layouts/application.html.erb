<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= link_to "Home", root_path %>

    <% flash.each do |name, msg| %>
      <div class="<%= name %>-flash">
        <p><%= msg %></p>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
